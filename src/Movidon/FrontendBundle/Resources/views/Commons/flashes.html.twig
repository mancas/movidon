        <div class="alert alert-{{ class }}" id="alert-main">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <strong>{{ 'Informaci√≥n' | trans }}</strong>:
            {{ flashMessage }}
        </div>
    {% endfor %}
{% endfor %}