{% extends 'FrontendBundle::base.html.twig' %}

{% block header %}
    {% include 'FrontendBundle:Commons:nav-top.html.twig' %}
    {% include 'CartBundle:Commons:cart-alert.html.twig' %}
    {% include 'UserBundle:Commons:user-sidenav.html.twig' %}
{% endblock %}

{% block body %}
    <div class="container container-main">
        {% block error %}
            <div class="row">
                <div class="col-md-12">
                    {% include 'FrontendBundle:Commons:flashes.html.twig' %}
                </div>
            </div>
        {% endblock %}

        <div class="row">
            <div class="col-md-12">
                {% block content %}{% endblock %}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block footer %}
    {{ parent() }}
{% endblock %}