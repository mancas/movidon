{% extends 'FrontendBundle::base.html.twig' %}

{% block header %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="container container-main">
        {% block error %}
            <div class="row">
                <div class="col-md-12">
                    {% include 'FrontendBundle:Commons:flashes.html.twig' %}
                </div>
            </div>
        {% endblock %}

        <div class="row">
            <div class="col-md-8">
                {% block content %}{% endblock %}
            </div>
            <div class="col-md-4">
                {% block sidebar %}{% endblock %}
            </div>
        </div>
    </div>
{% endblock %}

{% block footer %}
    {{ parent() }}
{% endblock %}