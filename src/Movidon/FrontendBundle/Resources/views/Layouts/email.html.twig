    <tr>
        <td align="center" style="margin: 0; padding: 0;" >
            <table cellpadding="0" cellspacing="0" border="0" align="center" width="700" style="font-family: Helvetica, Arial, sans-serif; background:#3E3D42;" class="header">
                <tr>
                    <td width="700" height="132" align="left" style="padding: 10px 0 10px; background: url('{{ url_for_image}}/bundles/frontend/img/el-cartujano-header.png')">
