{% extends "FrontendBundle:Layouts:2columns.html.twig" %}

{% block title %}{{ "Contacta con nosotros | El Cartujano "|trans }}{% endblock %}
{% block description %}{{"¿Tienes alguna duda? ¿Quieres conocer más sobre nuestros productos? Estaremos encantados de ayudarte"|trans}}{% endblock %}
{% block sectionclass %}contact page{% endblock %}


{% block content %}
    <form class="" action="{{ path('contact') }}" method="post">
        <h2 class="title">{{ 'Contacto' | trans }}</h2>
        <div class="row">
            <div class="form-group col-md-6">
                {{ form_widget(form.name, { 'attr': { 'class': 'form-control', 'placeholder': 'Nombre' | trans} }) }}
            </div>
            <div class="form-group col-md-6">
                {{ form_widget(form.email, { 'attr': { 'class': 'form-control', 'placeholder': 'Email' | trans} }) }}
            </div>
        </div>
        <h2 class="title">{{ '¿Cuál es tu consulta?' | trans }}</h2>
        <div class="form-group">
            {{ form_widget(form.text, { 'attr': { 'class': 'form-control', 'placeholder': 'Escríbenos y te responderemos' | trans, 'rows': '6'} }) }}
        </div>

        {{ form_rest(form) }}

        <button type="submit" class="pull-right btn btn-default">{{ 'Enviar' | trans }}</button>
    </form>
{% endblock %}

{% block sidebar %}
    <img class="img-responsive cartujano-img-center mt20" src="{{ asset('bundles/frontend/img/el-cartujano-logo.png') }}" alt="{{ 'Logo de El Cartujano' | trans }}">
{% endblock %}

{% block footer %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}